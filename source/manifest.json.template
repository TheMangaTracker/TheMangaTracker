{
    "manifest_version": 2,

    "name": "The Manga Tracker",  
    "version": "${ get_version() }",
    "description": "For all your manga tracking needs!",
    "icons": { "${ get_image_size(OUTPUT / 'icon.png') }": "icon.png" },

    "permissions": [
        "storage",
        "http://*/*", "https://*/*"
    ],

    "background": {
        "persistent": false,
        "scripts": [
          % for script in ['thirdparty/jquery.js'] + ['core.js'] + [s.relative_to(OUTPUT) for s in OUTPUT.glob('core/**/*.js')]:
            "${ script }"${ '' if loop.last else ',' }
          % endfor
        ]
    },

    "browser_action": {}
}
