{
    "manifest_version": 2,

    "name": "{{{name}}}",  
    "version": "{{{version}}}",
    "description": "{{{description}}}",

    "icons": { "{{{icon.size}}}": "{{{icon.path}}}" },

    "permissions": [
        {{#hosts}}
            "*://*.{{{.}}}/*",
        {{/hosts}}

        "storage"
    ],

    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },

    "browser_action": {}
}
