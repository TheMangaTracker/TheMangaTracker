{
    "manifest_version": 2,

    "name": "{{{name}}}",  
    "version": "{{{version}}}",
    "description": "{{{description}}}",

    "icons": { "{{{icon.size}}}": "{{{icon.path}}}" },

    "permissions": [
        {{#siteDomains}}
            "*://*.{{{.}}}/*",
        {{/siteDomains}}

        "storage"
    ],

    "content_security_policy": "script-src 'self'{{#remoteScriptOrigins}} {{{.}}}{{/remoteScriptOrigins}}; object-src 'self'",

    "background": {
        "persistent": false,
        "scripts": [
            "core.js"
        ]
    },

    "browser_action": {}
}
