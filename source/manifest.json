{
    "manifest_version": 2,

    "name": "${ CONFIG['name'] }",  
    "version": "${ CONFIG['version'] }",
    "description": "${ CONFIG['description'] }",
    "icons": { "${ get_image_size('icon.png') }": "icon.png" },

    "permissions": [
        "storage",

      % for site in sites:
        "*://*.${ site }/*"${ '' if loop.last else ',' }
      % endfor
    ],

    "background": {
        "persistent": false,
        "scripts": [
          % for script in ['thirdparty/jquery.js'] + ['core.js'] + glob('core/**/*.js'):
            "${ script }"${ '' if loop.last else ',' }
          % endfor
        ]
    },

    "browser_action": {}
}
