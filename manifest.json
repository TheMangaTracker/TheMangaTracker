{
    "manifest_version": 2,

    "name": "{{ name }}",
    "version": "{{ version }}",
    "description": "{{ description or name }}",
    "icons": {
      {%- for size, path in icons %}
        "{{ size }}": "{{ path }}"{% if not loop.last %},{% endif %}
      {%- endfor %}
    },

    "browser_action": {
        "default_icon": {
          {%- for size, path in button_icons or icons %}
            "{{ size }}": "{{ path }}"{% if not loop.last %},{% endif %}
          {%- endfor %}
        },
        "default_title": "{{ button_tooltip or name }}",
        "default_popup": "pages/popup.html"
    },

    "background": {
        "persistent": false,
        "scripts": [
            "scripts/global.js"
        ]
    },

    "permissions": [
        "storage"
    ]
}
